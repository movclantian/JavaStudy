import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int n = scanner.nextInt();
		double p = 0.00005;
		double res = 0;
		for (int i = 0; i < n; i++) {
			res += res * p;
			String x1 = scanner.next();
			double x=Double.valueOf(x1);
			if (x > 0) {
				res += x;
				long t=(long)(res*100);
				res=t/100.0;
				System.out.println(res);
			}
			if (x==0) {
				System.out.println(res);
			}
			if(x<0) {
				res += x;
				long t=(long)(res*100);
				res=t/100.0;
				System.out.println(res);
			}

		}

	}

}